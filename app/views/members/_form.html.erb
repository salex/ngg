
<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="label-data">
  <tr class="field">
    <th><%= f.label :email %></th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :last_name %></th>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :first_name %></th>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :phone %></th>
    <td><%= f.text_field :phone %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :cell %></th>
    <td><%= f.text_field :cell %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :address %></th>
    <td><%= f.text_area :address, :rows => 3, :cols => 28 %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :list_contact %></th>
    <td><%= f.check_box :list_contact %></td>
  </tr>
  
  <%if can? :invite , @member%>
  <tr class="field">
    <th><%= f.label :limited %></th>
    <td><%= f.check_box :limited %></td>
  </tr>
  
  <tr class="field">
     <th><%= f.label :status %></th> 
     <%=raw status_select(f) %> 
  </tr>
  <tr class="field">
     <th><%= f.label :tee %></th> 
     <td><%= f.select :tee, tee_options %></td> 
  </tr>
  <tr class="field">
     <th><%= f.label :last_played %></th> 
     <td><%= f.date_select :last_played %></td> 
  </tr>
  <tr class="field">
     <th><%= f.label :quota %></th> 
     <td><%= f.text_field :quota %></td> 
  </tr>
  <tr class="field">
     <th><%= f.label :initial_quota %></th> 
     <td><%= f.text_field :initial_quota %></td> 
  </tr>
  <%end%>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
