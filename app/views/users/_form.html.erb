<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <table class="label-data">
    <%= label_data_row(f.label( :username), f.text_field( :username))%>
    <%= label_data_row(f.label( :email, "Email Address"), f.text_field( :email))%>
    <%= label_data_row(f.label( :password), f.password_field( :password))%>
    <%= label_data_row(f.label( :password_confirmation, "Confirm Password"), f.password_field( :password_confirmation))%>
  </table>
  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
  
<% end %>
